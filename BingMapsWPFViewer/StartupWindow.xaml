<Window x:Class="BingMapsWPFViewer.Main.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StartupWindow" Height="150" Width="400"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">
    <Border CornerRadius="2" BorderThickness="2" BorderBrush="Black">
        <StackPanel Orientation="Horizontal" Margin="20">
        <Image Source="/BingMapsWPFViewer.Main;component/Images/layers.png"
               Stretch="None"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               Margin="0" Width="48" Height="48"></Image>
            <Label Content="Bing Maps WPF Viewer"
               HorizontalAlignment="Left"
               Name="label1"
                   Margin="10"
               VerticalAlignment="Center"
               FontSize="22"
               FontWeight="Bold" />
        </StackPanel>
    </Border>
</Window>
