<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- DefaultLayerDataTemplate -->
    <DataTemplate x:Key="DefaultLayerDataTemplate">
        <!-- Not defined Layer -->
        <GroupBox Header="New layer"
                  Background="White"
                  Grid.Row="1"
                  Grid.Column="1"
                  Margin="3"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  Visibility="Visible">
            <TextBlock Grid.Column="1"
                       Margin="5,20,5,5"
                       Grid.Row="1"
                       TextWrapping="Wrap"
                       TextTrimming="WordEllipsis">
                 <Bold>Please select a layer type from the list on the left.</Bold><LineBreak />
                <LineBreak />
- If you want an image layer to be used as a base map, choose any of the Tile layer types.<LineBreak />
                <LineBreak />
- If you want to display features, choose any of the Vector layers.
            </TextBlock>
        </GroupBox>
    </DataTemplate>

</ResourceDictionary>